config BR2_PACKAGE_ARMSNES
        bool "libretro-armsnes"
	depends on BR2_PACKAGE_RETROARCH
	depends on BR2_PACKAGE_ZLIB
	depends on BR2_PACKAGE_LIBPNG
	depends on BR2_INSTALL_LIBSTDCPP
        help
          A libretro SNES emulator core for ARM.

	  http://www.libretro.com

comment "armsnes needs a toolchain w/ C++, zlib, and libpng"
	depends on !BR2_INSTALL_LIBSTDCPP && !BR2_PACKAGE_ZLIB \
		&& !BR2_PACKAGE_LIBPNG